<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lecture_row"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/course_title"
                style="@style/Text.mainLabel"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="@string/hello_world" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/course_number"
                    style="@style/Text.smallLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_rect_label"
                    android:gravity="center"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/lecture_number"
                    style="@style/Text.smallLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_rect_label"
                    android:gravity="center"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/classification"
                    style="@style/Text.smallLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_rect_label"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/hello_world" />

                <TextView
                    android:id="@+id/department"
                    style="@style/Text.smallLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_rect_label"
                    android:gravity="center"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/class_time"
                    style="@style/Text.smallLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_rect_label"
                    android:gravity="center"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/location"
                    style="@style/Text.smallLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_rect_label"
                    android:gravity="center"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/remark"
                    style="@style/Text.smallLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_rect_label"
                    android:gravity="center|left"
                    android:padding="3dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/add"
            style="@style/Text.addRemoveButton"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:background="@drawable/round_rect_green"
            android:text="@string/add" />

        <Button
            android:id="@+id/remove"
            style="@style/Text.addRemoveButton"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:background="@drawable/round_rect_red"
            android:text="@string/remove" />
    </RelativeLayout>

</LinearLayout>