<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- RemoveLecture shadow below action bar Android < 5.0 -->
        <item name="android:windowContentOverlay">@null</item>

        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>

        <item name="actionMenuTextAppearance">@style/Text.ActionBarItemMenu</item>
        <!--<item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>-->
        <!--<item name="android:actionBarTabTextStyle">@style/Text.ActionBarTitle</item>-->
        <!--
                <item name="colorControlHighlight">#40ffffff</item> // this is for click event
        -->
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="background">@drawable/actionbar_background</item>
        <item name="titleTextStyle">@style/Text.ActionBarTitle</item>
        <item name="android:titleTextStyle">@style/Text.ActionBarTitle</item>
    </style>

    <style name="Text.ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" >
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.ActionBarItemMenu" parent="@android:style/TextAppearance.Widget.IconMenu.Item" >
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text -->
    <style name="Text"></style>

    <style name="Text.AddRemoveButton">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.MainLabel">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SmallLabel">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Text.SmallLabelRed">
        <item name="android:textColor">#ffff0000</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- For searched lecture list -->

    <style name="Text.LectureTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.LectureBody">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Text.LectureDetail">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- For my lecture list-->

    <style name="Text.MyLectureTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.MyLectureBody">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Text.SettingsTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SettingsDetail">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--For notification-->

    <style name="Text.NotificationTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.NotificationDetail">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--For lecture detail-->

    <style name="Text.LectureDetailTitle1">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.LectureDetailContent1">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.LectureDetailTitle2">
        <item name="android:textColorHint">#808080</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.LectureDetailContent2">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.LectureDetailButton">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
